{% block custom_js %}
<script type="text/javascript">
var sucursal = 1;
var mes = 7;

$("#select_sucursal").change(function() {
  sucursal = $(this).children(":selected").attr("value");
    recargar_tabla(mes, sucursal);
});

$('#datepicker').change(function () {
    mes = $('#datepicker').val(); 
    recargar_tabla(mes, sucursal);
});


function format ( d , cuenta_id ) {

  $tabla = $('<div class="table-responsive" style="max-height: 400px !important; overflow: scroll !important;"><table class="table table-bordered" style="    background-color: #3c8dbc !important;"><thead><th>Fecha</th><th>Descripci√≥n</th><th>Ingresos</th><th>Egresos</th><th>Saldo</th></thead><tbody class="cuerpo_tabla"></tbody></table></div>');

  var contenido = '';
  var saldo = 0;
  var nro = 0;

  $.ajax({
        url: "{{ base_url() }}/administracion/cajas/comprobante/informe-cuenta-transacciones/" + mes + "/" + sucursal + "/" + cuenta_id,
        dataType: 'json',
        type: 'get',
        cache:false,
        success: function(data)
        {
          var event_data = '';
            $.each(data.data, function(index, value)
            {
              nro += 1;
              event_data += '<tr>';
              event_data += '<td>'+value.fecha+ ' [' + nro + ']</td>';
              if(value.periodo > 0)
              { 
                event_data += '<td>'+value.razon_social+' - ' + value.observaciones + ' - ' + value.detalle + ' - PERIODO: [' + value.periodo + ']</td>' ;
              }
              else
              {
                event_data += '<td>'+value.razon_social+' - ' + value.observaciones + ' - ' + value.detalle + '</td>' ;
              }
              if(Number(value.tipo) == 1) // Venta
              {
                console.log(event_data.tipo);
                event_data += '<td>$'+value.total+'</td>';
                event_data += '<td> - </td>';
                saldo += Dec2(Number(value.total));
              }
              else if(Number(value.tipo == 2)) 
              {
                console.log(event_data.tipo);
                event_data += '<td> - </td>';
            event_data += '<td>$'+value.total+'</td>';
                saldo -= Dec2(Number(value.total));
              }

          event_data += '<td>$'+Dec2(saldo)+'</td>';
          event_data += '</tr>';
      });
      $tabla.find('.cuerpo_tabla').append(event_data);
        },
    });
    return $tabla;
}

// variable datatable global:
var dt = $('.tabla_informe_ingreso_salta').DataTable({
  "bPaginate": false,
    "bLengthChange": false,
    "bInfo": false,
    "searching": false,
});

// datapicker:
$('#datepicker').datepicker({
    format: 'mm',
});

  // Array to track the ids of the details displayed rows
var detailRows = [];

$('.tabla_informe_ingreso_salta tbody').on( 'click', 'tr td.details-control', function () {
    var tr = $(this).closest('tr');
    var row = dt.row( tr );
    var idx = $.inArray( tr.attr('id'), detailRows );

    if ( row.child.isShown() ) {
        tr.removeClass( 'details' );
        row.child.hide();

        // Remove from the 'open' array
        detailRows.splice( idx, 1 );
    }
    else {
        tr.addClass( 'details' );
        row.child( format(row.data(), row.data().id_tra ) ).show();

        // Add to the 'open' array
        if ( idx === -1 ) {
            detailRows.push( tr.attr('id') );
        }
    }
} );

// On each draw, loop over the `detailRows` array and show any child rows
dt.on( 'draw', function () {
    $.each( detailRows, function ( i, id ) {
        $('#'+id+' td.details-control').trigger( 'click' );
    } );
});

function recargar_tabla()
{
  // al seleccionar un mes se carga la tabla:
    dt.destroy();
    dt = $('.tabla_informe_ingreso_salta').DataTable( 
    {
      processing: true,
      serverSide: true,
      ajax: { url: "{{ base_url() }}/administracion/cajas/comprobante/informe-cuenta-consulta/"+ mes +"/" + sucursal },
      columns: 
      [
          {
            "class":          "details-control",
            "orderable":      false,
            "data":           null,
            "defaultContent": ""
          },
        {
          name: 'nombre',
          data: 'nombre_tipo'
        },
        { 
          name: 'cantidad',
          data: 'cantidad'
        },
        { 
          name: 'ingreso',
          data: function(data){
            return "$"+Dec2(data.ingreso);
          }
        },
        { 
          name: 'egreso',
          data: function(data){
            return "$"+Dec2(data.egreso);
          }
        },
        { 
          name: 'saldo',
          data: function(data){
            return "$"+Dec2(data.ingreso-data.egreso);
          }
        },
      ],
      "bPaginate": false,
      "bLengthChange": false,
      "bInfo": false,
      "searching": false,
  });
}

function Dec2(num) {
  num = String(num);
  if(num.indexOf('.') !== -1) {
    var numarr = num.split(".");
    if (numarr.length == 1) {
      return Number(num);
    }
    else {
      return Number(numarr[0]+"."+numarr[1].charAt(0)+numarr[1].charAt(1));
    }
  }
  else {
    return Number(num);
  }  
}

</script>
