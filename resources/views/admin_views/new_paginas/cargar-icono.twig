{% extends "admin_views/base.twig" %}
{% block aditional_css %}
	
{% endblock %}
{% block title %}Cargar icono{% endblock %}
{% block header_title %}Cargar icono{% endblock %}
{% block breadcrumb %}
	<li class="active">
		<a href="{{path_for('paginas.cargar.icono')}}">Cargar icono</a>
	</li>
{% endblock %}
{% block content %}
<div class="row">
	{% include 'admin_views/admin_partials/flash.twig' %}
	<div class="col-sm-6">
		<div class="box box-default">
			<div class="box-header">
				<div class="box-title text-bold">Cargar icono</div>
			</div>
			<form method="POST" action="{{paginas.icono.cargar}}" enctype="multipart/form-data">
				<div class="box-body">
					<div class="form-group">
	          <label>Nombre</label>
	          <input type="text" class="form-control" name="icono.nombre" placeholder="Nombre" required="">				
	        </div>	
	        <div class="form-group">
	          <label>Archivo</label>
	          <input type="file" class="form-control" name="icono.enlace" id="iconupload" placeholder="Archivo" required="">				
	        </div>				
				</div>
				{{ csrf.field | raw }}
				<div class="box-footer">
					<button class="btn btn-primary pull-right" type="submit">Cargar icono</button>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}
