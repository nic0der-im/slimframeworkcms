		<base href="{{ base_url() }}">
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
		<link rel="stylesheet" href="{{static_assets}}/css/login.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/5.1.1/bootstrap-social.min.css" />
	</head>
	<body>
		<div class="container">			
			<form class="form-signup" action="{{ path_for('recuperar') }}" method="post" autocomplete="off">

				<h2 class="form-signup-heading"><img src="{{static_assets}}/images/logo.png" class="login-logo" alt="Logo Ciro Automotores"></h2>
				<p class="text-muted">Ingrese el Correo Electronico a recuperar la cuenta.</p>

				{% include 'guest_views/guest_partials/fixed/flash.twig' %}
				<br>
				<div>
					<label for="email" class="sr-only">Dirección de correo electrónico</label>
					<input type="email" id="email" name="email" class="form-control" placeholder="Dirección de correo electrónico" autocomplete="off" required>
					{% if errors.email %}
						<span class="help-block">{{ errors.email | first }}</span>
					{% endif %}
				</div>
				<br>
				<button class="btn btn-md btn-primary btn-block" type="submit" id="btn-signin">Enviar Email de Recuperacion</button>
				{{ csrf.field | raw }}
			</form>
		</div>
