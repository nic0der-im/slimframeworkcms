
{% if flash.getMessage('info') %}
<div class="alert alert-info alert-dismissible fade show rounded-0 m-0 flashmessage">
	<button type="button" class="close p-0 notransport" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
	{{ flash.getMessage('info') | first }}
</div>
{% endif %}

{% if flash.getMessage('error') %}
<div class="alert alert-danger alert-dismissible fade show rounded-0 m-0 flashmessage">
	<button type="button" class="close p-0 notransport" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
	{{ flash.getMessage('error') | first }}
</div>
{% endif %}